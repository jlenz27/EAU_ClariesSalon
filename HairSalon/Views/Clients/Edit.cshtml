@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Edit Client</h2>

<h4>Edit this client's information: @Html.DisplayFor(model => model.ClientName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ClientId)

  @Html.LabelFor(model => model.ClientName)
  @Html.EditorFor(model => model.ClientName)

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")

  <input type="submit" value="Save" />
}
<p></p>@Html.ActionLink("Back To list of clients", "Index")</p>