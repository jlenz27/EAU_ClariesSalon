@{
  Layout = "_Layout";
}

@using HairSalons.Models;

<h1>Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>No Clients have been added yet!</h3>
} 

<ul>
  @foreach(Restaurant restaurant in Model)
  {
    <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new restaurant", "Create")</p>
<p>@Html.ActionLink("Add new cuisine", "Create", "Cuisines")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>