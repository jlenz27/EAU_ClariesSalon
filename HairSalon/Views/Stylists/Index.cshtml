@{
  Layout = "_Layout";
}

@using HairSalons.Models;

<h1>Stylist</h1>

@if (@Model.Count == 0)
{
  <h3>No Stylists have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Stylist item in Model)
    {
      <li>@Html.ActionLink($"{item.Description}", "Details", new { id = item.StylistId }) | @item.Client.Name</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new stylist", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>