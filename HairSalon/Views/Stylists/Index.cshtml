@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;

<h1>Cuisines</h1>

@if (@Model.Count == 0)
{
  <h3>No cuisines have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Cuisine item in Model)
    {
      <li>@Html.ActionLink($"{item.Description}", "Details", new { id = item.CuisineId }) | @item.Restaurant.Name</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new cuisine", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>